<mvc:View controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="Resignation Job Details">
        
<DatePicker id="startDatePicker" placeholder="Start Date" width="150px" liveChange="onDateFilterChange" />
<DatePicker id="endDatePicker" placeholder="End Date" width="150px" liveChange="onDateFilterChange" />

        <Button text="Download" press="onDownload" />
        <Table id="resignationTable" items="{/resignation}">
            <columns>
                <Column><Text text="Job ID" /></Column>
                <Column><Text text="Date" /></Column>
                <Column><Text text="Resignation Entries" /></Column>
                <Column><Text text="Separation Postings" /></Column>
                <Column><Text text="Future Dated Entries" /></Column>
                <Column><Text text="Upper Manager Updates" /></Column>
                <Column><Text text="Separation Start" /></Column>
                <Column><Text text="Separation End" /></Column>
                <Column><Text text="Separation Status" /></Column>
                <Column><Text text="Upper Manager Start" /></Column>
                <Column><Text text="Upper Manager End" /></Column>
                <Column><Text text="Upper Manager Status" /></Column>
            </columns>
            <items>
                <ColumnListItem>
  <cells>
    <Text text="{Jobid}" />
    <Text text="{path: 'Date', formatter: '.formatDate'}" />
    <Text text="{resignationEntries}" />
    <Text text="{seperationPostings}" />
    <Text text="{futureDatedEntries}" />
    <Text text="{upperManagerUpdates}" />
    <Text text="{path: 'seperationJobStartTime', formatter: '.formatTime'}" />
    <Text text="{path: 'seperationJobEndTime', formatter: '.formatTime'}" />
    <Text text="{ueperationJobStatus}" />
    <Text text="{path: 'upperManagerJobStartTime', formatter: '.formatTime'}" />
    <Text text="{path: 'upperManagerJobEndTime', formatter: '.formatTime'}" />
    <Text text="{upperManagerJobStatus}" />
  </cells>
</ColumnListItem>

            </items>
        </Table>
    </Page>
</mvc:View>
